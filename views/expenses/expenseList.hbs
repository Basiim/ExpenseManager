<h3>Welcome {{name}}</h3>
<p>User ID: {{id}}</p>
<div class="row"><div class="col-md-6"><h4> Expenses List</h4><br>
</div>
<div class="col-md-6"><h4> Income List</h4></div>
<div class="row">
    </div>
    <table class="table table-striped col-md-6">
        <thead>
            <tr>
                <th>Expense Type</th>
                <th>Expense Amount</th>
                <th><a href="/expenses/add" class="btn btn-outline-primary"><i class="fa fa-plus"></i></a></th>
            </tr>
        </thead>
        <tbody>
            {{#each expList}}
            <tr>
                <td>{{this.expenseType}}</td>
                <td>{{this.expenseAmount}}</td>
                <td>
                    <a href="/expenses/editexp/{{this._id}}"><i class="fa fa-pencil fa-lg" aria-hidden="true"></i></a>
                    <a href="/expenses/deleteexp/{{this.id}}" onclick="confirm('Are you sure you want to delete this record?');"><i class="fa fa-trash fa-lg" aria-hidden="true"></i></a>
                </td>
            </tr>
            {{/each}}
            <tr>
                <td style="font-weight: bold;">Total Expenses: </td>
                <td style="font-weight: bold;">{{expense}}</td>
                <td></td>
            </tr>
        </tbody>
    </table>

    <!-- Income -->

    <table class="table table-striped col-md-6">
        <thead>
            <tr>
                <th>Income Type</th>
                <th>Income Amount</th>
                <th><a href="/incomes/addIncome" class="btn btn-outline-primary"><i class="fa fa-plus"></i></a></th>
            </tr>
        </thead>
        <tbody>
            {{#each incList}}
            <tr>
                <td>{{this.incomeType}}</td>
                <td>{{this.incomeAmount}}</td>
                <td>
                    <a href="/incomes/editinc/{{this._id}}"><i class="fa fa-pencil fa-lg" aria-hidden="true"></i></a>
                    <a href="/incomes/deleteinc/{{this.id}}" onclick="confirm('Are you sure you want to delete this record?');"><i class="fa fa-trash fa-lg" aria-hidden="true"></i></a>
                </td>
            </tr>
            {{/each}}
            <tr>
                <td style="font-weight: bold;">Total Income: </td>
                <td style="font-weight: bold;">{{income}}</td>
                <td></td>
            </tr>
        </tbody>
    </table>
</div>
<div class="row">
<h3 class="col-md-6">Balance: <span style="color: rgb(11, 122, 11);">{{balance}}</span></h3>
    <a href="/login" class="btn btn-info">Logout</a>
</div>